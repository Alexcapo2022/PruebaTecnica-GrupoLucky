@model Producto

<h1>Detalle del producto</h1>

<div class="card" style="max-width: 18rem;">
  
    <div class="card-body">
        <h5 class="card-title">@Model.Nombre</h5>
        <h6 class="card-subtitle mb-2 text-muted">Precio: @Model.Precio.ToString("C")</h6>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Descripción: Agrega aquí la descripción del producto si la tienes</li>
      
    </ul>
</div>

<p class="mt-3">
 
    <a asp-action="Index" class="btn btn-secondary">Regresar a la lista de productos</a>
</p>
