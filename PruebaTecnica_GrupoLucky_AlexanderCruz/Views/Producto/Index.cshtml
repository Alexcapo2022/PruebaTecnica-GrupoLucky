@model IEnumerable<Producto>

<h1>Productos</h1>
<p>
    <a asp-action="Crear" class="btn btn-success">Crear nuevo producto</a>
</p>


@{
    int contador = 1; // Inicializamos el contador fuera del bucle
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th> <!-- Columna para el contador -->
            <th>Nombre</th>
            <th>Precio</th>
            <th >Acción</th> <!-- Cambiamos el encabezado a "Acción" -->
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@contador</td> <!-- Mostramos el contador en la primera columna -->
                <td>@producto.Nombre</td>
                <td>@producto.Precio.ToString("C")</td>
                <td >
                    <div class="btn-group" role="group">
                        <!-- Utilizamos un grupo de botones para separarlos -->
                        <a asp-action="Detalle" class="btn btn-primary" asp-route-id="@producto.Id">Detalle</a>
                        <a asp-action="Editar" class="btn btn-warning" asp-route-id="@producto.Id" style="margin-left: 5px;">Editar</a> <!-- Agregamos un margen izquierdo -->
                        <a asp-action="Eliminar" class="btn btn-danger" asp-route-id="@producto.Id" style="margin-left: 5px;">Eliminar</a> <!-- Agregamos un margen izquierdo -->
                    </div>
                </td>
            </tr>
            contador++; // Incrementamos el contador para el siguiente producto
        }
    </tbody>
</table>